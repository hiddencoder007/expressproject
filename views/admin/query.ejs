<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.2/font/bootstrap-icons.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="/admin/css/style.css">
</head>
<body>
            <%- include('../../partials/admin/header.ejs')%>

            <section id="mid">
                <div class="container">
                    <div class="row">
                        <%- include('../../partials/admin/left.ejs')%>
                        <div class="col-md-9">
                            <h2>Query Management</h2>

                            <form action="/admin/querysearch" method="post">
                                <label for="">Select Status</label>
                                <select name="search" id="" class="form-select">
                                    <option value="read">Read</option>
                                    <option value="unread">Unread</option>
                                </select>
                                <button type="submit" class="form-control btn btn-success mt-2 mb-5">Search</button>
                            </form>

                            <table class="table table-striped">
                                <tr>
                                    <th>S.No.</th>
                                    <th>Customer's Email</th>
                                    <th>Customer's Query</th>
                                    <th>Status</th>
                                    <th>Reply</th>
                                    <th>Action</th>
                                </tr>
                                <%record.forEach((result,key)=>{%>

                                    <tr>
                                        <td><%=key+1%></td>
                                        <td><%=result.email%></td>
                                        <td><%=result.query%></td>
                                        <td><button class="btn btn-success"><%=result.status%></button></td>
                                        <td><a href="/admin/queryreply/<%=result.id%>"><button style="border: 0px solid transparent;" class="btn btn-primary"><i class="bi bi-reply"></i></button></a></td>
                                        <td><a href="/admin/querydelete/<%=result.id%>"><button style="border: 0px solid transparent;" class="btn btn-danger"><i class="bi bi-trash"></i></button></a></td>

                                    </tr>
                                    <% })%>
                                    <%if(record.length==0){%>
                                    <tr>
                                        <td colspan="8">no record found</td>
                                    </tr>
                                    <%}%>
                               
                                
                            </table>


                        </div>
                    </div>
                </div>
            </section>

            <%- include('../../partials/admin/footer.ejs')%>
</body>
</html>