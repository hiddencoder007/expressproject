<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.2/font/bootstrap-icons.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="/admin/css/style.css">
</head>
<body>
            <%- include('../../partials/admin/header.ejs')%>

            <section id="mid">
                <div class="container">
                    <div class="row">
                        <%- include('../../partials/admin/left.ejs')%>
                        <div class="col-md-9">

                            <h2>User's Management</h2>
                            <table class="table table-striped">
                                <tr>
                                    <th>S.No.</th>
                                    <th>Username</th>
                                    <th>Posted Date</th>
                                    <th>Id Status</th>
                                    <th>Id Roles</th>
                                    <th>Action</th>
                                    
                                </tr>
                                <%record.forEach((result,key)=>{%>
                                    <tr>
                                        <td><%=key+1%></td>
                                        <td><%=result.username%></td>
                                        <td><%=result.postedDate%></td>
                                        <%if(result.status=='suspended'){%>
                                        <td><a href="/admin/userstatusupdate/<%=result.id%>"><button class="btn btn-danger"><%=result.status%></button></a></td>
                                        <%}else{%>
                                        <td><a href="/admin/userstatusupdate/<%=result.id%>"><button class="btn btn-success"><%=result.status%></button></a></td>
                                        <%}%>
                                        <%if(result.roles=='pvt'){%>
                                        <td><a href="/admin/roleupdate/<%=result.id%>"><button class="btn btn-success"><%=result.roles%></button></a></td>
                                        <%}else{%>
                                        <td><a href="/admin/roleupdate/<%=result.id%>"><button class="btn btn-primary"><%=result.roles%></button></a></td>
                                        <%}%>
                                        
                                        <td><a href="/admin/usersdelete/<%=result.id%>"><button style="border: 0px solid transparent;" class="btn btn-danger"><i class="bi bi-trash"></i></i></button></a></td>

                                    
                                    
                                    </tr>
                               <% })%>
                                
                            </table>

                        </div>
                    </div>
                </div>
            </section>

            <%- include('../../partials/admin/footer.ejs')%>
</body>
</html>